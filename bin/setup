#!/bin/bash -e

case "$1" in
  -v|--version)
    version="$2"
esac

# Parse arguments
source "lib/util"
parse_args $@

# Don't set -u until after the above arg parsing is complete
set -u

echo "$version" > env/NGINX_VERSION


for dir in logs run; do
	mkdir -p $dir
done

tar xvzf ${OPENSHIFT_SERVER_DIR}usr/phpmyadmin.tar.gz
rm phpmyadmin.tar.gz

if [[ ( -f "${OPENSHIFT_REPO_DIR}www.conf.erb" ) && ( -e "${OPENSHIFT_SERVER_DIR}usr/etc/php-fpm.d" )]]; then
	oo-erb ${OPENSHIFT_REPO_DIR}www.conf.erb > ${OPENSHIFT_SERVER_DIR}usr/etc/php-fpm.d/www.conf
fi
